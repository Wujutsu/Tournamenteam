{% extends 'base.html.twig' %}

{% block title %}Événement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
{% endblock %}

{% block body %}

<h1>Événement à venir</h1>

<div class="row">
    <div class="col-12">
            <div class="filtre-active">League of Legend</div>
            {% for i in 0..5 %}
            <div class="filtre">League of Legend</div>
        {% endfor %}
    </div>

    <div class="col-12 mt-4"></div>

    {% for i in 0..6 %}
    <div class="col-lg-3 col-md-6 col-sm-6 cadreEvent">
        <img src="{{ asset('build/games/lol.jpg') }}" alt="Event">
        <div class="bodyEvent">League of Legend</div>
    </div>
    {% endfor %}
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
{% endblock %}